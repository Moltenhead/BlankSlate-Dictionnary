<p id="notice"><%= notice %></p>

<h1>Language Concepts</h1>

<table>
  <thead>
    <tr>
      <th>Roman</th>
      <th>Run</th>
      <th>Phonologie</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @language_concepts.each do |language_concept| %>
      <tr>
        <td><%= language_concept.roman %></td>
        <td><%= language_concept.run %></td>
        <td><%= language_concept.phonologie %></td>
        <td><%= language_concept.description %></td>
        <td><%= link_to 'Show', language_concept %></td>
        <td><%= link_to 'Edit', edit_language_concept_path(language_concept) %></td>
        <td><%= link_to 'Destroy', language_concept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

